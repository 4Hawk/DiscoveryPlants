 @model List<Ongs>;
 
 
 <div class="py-5 text-center align-items-center d-flex" style="background-image: linear-gradient(to left bottom, rgba(189, 195, 199, .75), rgba(44, 62, 80, .75)); background-size: 100%;">
    <div class="container py-5">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h1 class="display-3 mb-4" >Estas a punto de Donar</h1>
          <form method="post" asp-controller="home" asp-action="mensajedonar">
              <div class="form-group"> <label for="form16">Escoge la organización a la que desea donar</label> <div class="form-group">
                <select name="code" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id" id="code" >@item.Nombre</option>
                    }
                </select>
              
              <button><span class="btn btn-lg mx-1 btn-success">Generar Código</span></button>
              <p class="">Actualmente solo aceptamos donaciones por depósito<br></p>
          </form>
          @{
                if(ViewBag.mensaje!=null){
                  <div>@ViewBag.mensaje</div>
                  
                }
          }
        </div>
      </div>
      <div class="row">
        <div class="col-md-12"><i class="fa fa-4x"></i></div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-4"><img class="img-fluid d-block rounded-circle mx-auto" src="https://www.fastlanelatam.com/wp-content/uploads/2018/07/137.jpg"></div>
            <div class="col-md-4"><img class="img-fluid d-block rounded-circle" src="https://www.bbva.com/wp-content/uploads/2019/04/Logo-BBVA-1024x576.jpg"></div>
            <div class="col-md-4"><img class="img-fluid d-block rounded-circle" src="https://s3.amazonaws.com/www.laborum.pe/lb_companies/r/logos/85286/0610_59d7de7650d3c.jpg"></div>
          </div>
        </div>
      </div>
    </div>
  </div>