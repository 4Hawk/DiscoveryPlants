@model Plantas
 <div class="container py-5">
      <div class="row">
            <div class="mx-auto col-lg-8 col-15">

                <form method="post" asp-controller="">
                    <div>
                        <h4>Registrar Planta</h4>
                    </div>
                    <div asp-validation-summary="All"></div>

                    <div class="form-group">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="Caracteristicas"></label>
                        <textarea asp-for="Caracteristicas" rows="7" col="7" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="Usos"></label>
                        <textarea asp-for="Usos" rows="3" col="7" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="InfoAdicional"></label>
                        <textarea asp-for="InfoAdicional" rows="3" col="7" class="form-control"></textarea>
                    </div>


                    <div class="form-group">
                        <label asp-for="Foto"></label>
                        <input asp-for="Foto" class="form-control">
                    </div>
                    
                    
                    <div class="form-group">
                        <label asp-for="CategoriaAsig"></label>
                        <select asp-for="CategoriaId" class="form-control">
                            @foreach (var item in (List<Categorias>)ViewBag.Categorias)
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mx-auto py-3">
                        <button class="btn btn-primary">Registrar</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>